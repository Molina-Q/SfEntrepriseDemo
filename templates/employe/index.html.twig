{% extends 'base.html.twig' %}

{% block title %}Liste des employés!{% endblock %}

{% block body %}
<h1>Liste des employés</h1>

    
{% for employe in employes %}
    <p> 
        <a href="{{ path('details_employe', {'id': employe.id})}}">
            {{ employe }}
        </a>
        <a class="btn btn-primary" href="{{ path('edit_employe', {'id': employe.id}) }}">
            Edit
        </a>

        <a class="btn btn-danger" href="{{ path('delete_employe', {'id': employe.id}) }}">
            Suppr
        </a>
    </p>
{% endfor %}
{% endblock %}
