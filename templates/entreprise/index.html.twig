{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    
    {% for entreprise in entreprises %}
        <p>
            <a href="{{ path('details_entreprise', {'id': entreprise.id}) }}">
                {{ entreprise }}
            </a>
    
            <a class="btn btn-primary" href="{{ path('edit_entreprise', {'id': entreprise.id}) }}">
                Edit
            </a>

            <a class="btn btn-danger" href="{{ path('delete_entreprise', {'id': entreprise.id}) }}">
                Suppr
            </a>

        </p>
    {% endfor %}

{% endblock %}