{% extends 'base.html.twig' %}

{% block title %}Détail d'une entreprise{% endblock %}

{% block body %}
    <h1>Détail d'une entreprise</h1>

    <h2>{{ entreprise }}</h2>

    <p>Adresse: {{ entreprise.adresseComplete }}</p>
    
    <p>Date création: {{ entreprise.dateCreation | date("d-m-Y")  }}</p>

    <h3>Liste des salariés</h3>
    {% if entreprise.employes | length > 0 %}

        {% for employe in entreprise.employes %}
            <a href="{{ path('details_employe', {'id': employe.id}) }}">
                <p>{{ employe }}</p>
            </a>
        {% endfor %}

    {% else %}

        <p>Cette entreprise n'a aucun salarié</p>

    {% endif %}

    

{% endblock %}